<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.amelendez.lgo.activities.MainActivity">

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/languoSearchView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Languo"
        android:id="@+id/main_newLanguoButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="addLanguoAction"
        android:layout_toStartOf="@+id/devOps" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_listView"
        android:layout_below="@+id/languoSearchView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/main_newLanguoButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dev Options"
        android:id="@+id/devOps"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="devOps"
        android:longClickable="false" />

</RelativeLayout>
